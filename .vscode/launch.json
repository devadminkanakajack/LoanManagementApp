{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--port",
                "5000"
            ],
            "jinja": true
        },
        {
            "type": "msedge",
            "name": "Launch Edge",
            "request": "launch",
            "runtimeArgs": [
                "--remote-debugging-port=5500"
            ],
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "vscode-edge-devtools.debug",
            "name": "Edge DevTools",
            "request": "attach",
            "url": "http://localhost:5000"
        },
        {
            "name": "Docker: Python - Flask",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "flask"
            }
        },
        {
            "type": "msedge",
            "name": "Launch Microsoft Edge",
            "request": "launch",
            "runtimeArgs": [
                "--remote-debugging-port=5500"
            ],
            "url": "c:\\Users\\Brendon Bauelua\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.6\\out\\startpage\\index.html", // Provide your project's url to finish configuring
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "msedge",
            "name": "Launch Microsoft Edge in headless mode",
            "request": "launch",
            "runtimeArgs": [
                "--headless",
                "--remote-debugging-port=5500"
            ],
            "url": "c:\\Users\\Brendon Bauelua\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.6\\out\\startpage\\index.html", // Provide your project's url to finish configuring
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "vscode-edge-devtools.debug",
            "name": "Open Edge DevTools",
            "request": "attach",
            "url": "c:\\Users\\Brendon Bauelua\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.6\\out\\startpage\\index.html", // Provide your project's url to finish configuring
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/server/index.ts",
            "runtimeExecutable": "tsx",
            "sourceMaps": true,
            "console": "integratedTerminal"
        },
        {
            "type": "msedge",
            "name": "Launch Edge against localhost",
            "request": "launch",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}/client",
            "sourceMapPathOverrides": {
                "/@fs/*": "${webRoot}/*",
                "/@vite/*": "${webRoot}/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Server",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/server/index.ts",
            "runtimeExecutable": "tsx",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Flask + Edge",
            "configurations": [
                "Docker: Python - Flask",
                "Launch Microsoft Edge",
                "Open Edge DevTools"
            ]
        },
        {
            "name": "Launch Edge Headless and attach DevTools",
            "configurations": [
                "Launch Microsoft Edge in headless mode",
                "Open Edge DevTools"
            ]
        },
        {
            "name": "Launch Edge and attach DevTools",
            "configurations": [
                "Launch Microsoft Edge",
                "Open Edge DevTools"
            ]
        },
        {
            "name": "Debug Full Stack",
            "configurations": ["Launch Edge", "Launch Microsoft Edge"]
        },
        {
            "name": "Full Stack Debug",
            "configurations": ["Debug Server", "Launch Edge", "Edge DevTools"]
        }
    ]
}